@model ShopClueWebApp.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Delete Category Details</h1>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section.SectionName)
        </dd>
        <dt class="col-sm-2">
            Cover Photo
        </dt>
        <dd class="col-sm-10">
            <img src="~/cphotos/@Model.CategoryID@Model.ExtName" class="img-fluid" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <input type="submit" value="Delete Details" class="btn btn-danger" />
    </form>
</div>
